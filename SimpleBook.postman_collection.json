		{
			"name": "List of Books",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", () => {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const response = pm.response.json();\r",
							"const nonFiction = response.filter((book) => book.available === true);\r",
							"//console.log(nonFiction[0]);\r",
							"\r",
							"pm.test(\"Book is available\", () => {\r",
							"    pm.expect(nonFiction[0]).to.be.an(\"object\");\r",
							"    pm.expect(nonFiction[0].available).to.eql(true);\r",
							"    pm.expect(nonFiction[0].available).to.be.true;\r",
							"    pm.expect(nonFiction[0].type).to.eql(\"non-fiction\");\r",
							"})\r",
							"\r",
							"pm.globals.set(\"bookId\", nonFiction[0].id);"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [],
				"url": {
